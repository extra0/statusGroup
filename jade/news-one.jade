extends _layout
block append head
	meta(name="description" content="")
	meta(name="keywords" content="")
	title Страница одной новости
block content
	.container
		.row
			.col-sm-12.col-xs-12
				// хлебные крошки
				.breadcrumbs
					ul.breadcrumbs__list
						li.breadcrumbs__list-item
							a.breadcrumbs__list-link(href="#!") Главная
						li.breadcrumbs__list-item
							a.breadcrumbs__list-link(href="#!") Новости
						li.breadcrumbs__list-item
							span.breadcrumbs__list-link.current Выставка в смольном
				// конец хлебные крошки
		h2.title
			span Новости
		.row
			// сайдбар
			.col-sm-3
				// меню 
				.sidebar__menu
					p.subtitle Рубрики
					ul.sidebar__menu-list
						li.sidebar__menu-list-item
							span.sidebar__menu-list-link.current Новости
						li.sidebar__menu-list-item
							a.sidebar__menu-list-link(href="#!") Реализованные проекты
						li.sidebar__menu-list-item
							a.sidebar__menu-list-link(href="#!") Статьи
				// конец меню
				// преимущество
				.sidebar__advantage
					img.sidebar__advantage-img(src="img/ukr-map.png", alt="ukr map")
					p.subtitle.sidebar__advantage-title 17 лет<br>Украинское
					p.sidebar__advantage-text Вот уже 17 лет мы ответственго делаем украинский продукт и даем работу сотням украинцев!
				// конец преимущество
				// блок шоурума
				.sidebar__showroom
					p.sidebar__showroom-title 3,000 
						span.sidebar__showroom-title-val м<sup>2</sup>
					p.sidebar__showroom-undertitle Площадь шоу-рума
					img.sidebar__showroom-img(src="img/showroom.png", alt="showroom")
					p.sidebar__showroom-text Это как <span class="color-ruby">4</span><br>теннисных<br>корта!
